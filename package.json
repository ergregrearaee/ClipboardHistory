{
  "name": "clipboardhistory",
  "version": "0.1.0",
  "description": "Recreating Window's 10 clipboard history in electron for all OS(Win, Mac, Linux)",
  "author": "Savan Naha <savannahar68@gmail.com>",
  "productName": "Clipboard History",
  "license": "MIT",
  "main": "src/main.js",
  "homepage": "./",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "electron-is-dev": "^1.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "mkdir build/electron && cp src/main.js build/electron/. && cp src/tray.png build/electron/.",
    "build-electron-win": "mkdir build/electron && robocopy src/main.js build/electron",
    "package": "electron-builder build --x64 --linux -c.extraMetadata.main=build/electron/main.js --publish never",
    "pack": "electron-builder --dir",
    "dist": "npx electron-builder --x64 --linux --c.extraMetadata.main=build/electron/main.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron-builder": "^22.6.0",
    "wait-on": "^5.0.0",
    "electron": "^8.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savannahar68/ClipboardHistory.git"
  },
  "keywords": [
    "electron-app",
    "javascript",
    "clipboard",
    "clipboard-manager",
    "electron"
  ],
  "bugs": {
    "url": "https://github.com/savannahar68/ClipboardHistory/issues"
  },
  "build": {
    "appId": "com.savan.clipboardhistory",
    "productName": "Clipboard History",
    "copyright": "savannahar68",
    "linux": {
      "category": "Utility",
      "icon": "icons/png/256x256.png",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "icons/mac/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "asar": false,
      "icon": "icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  }
}
